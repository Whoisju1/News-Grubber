{
  "name": "news-grubber",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "serve": "nodemon --legacy-watch",
    "start": "node -r dotenv/config build/index.js",
    "deploy": "npm run build && npm run start",
    "client": "cd ./frontend && npm run start",
    "build": "npm run clean && babel src --out-dir build",
    "clean": "rimraf build",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "lint": "echo '...Linting' && eslint src --fix && echo 'Linting Complete'",
    "watch": "watch \"echo '...Linting' && eslint src --fix && echo 'Linting Complete'\" src",
    "test:unit": "jest --runInBand --forceExit --detectOpenHandles",
    "test:unit:w": "jest --watchAll --runInBand"
  },
  "author": "Juan John-Charles",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/register": "^7.12.1",
    "bcrypt": "^5.0.0",
    "cheerio": "^1.0.0-rc.2",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.15",
    "morgan": "^1.10.0",
    "redis": "^3.0.2",
    "regenerator-runtime": "^0.13.7",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "babel-jest": "^24.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.5",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "watch": "^1.0.2"
  }
}
