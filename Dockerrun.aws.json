{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "api",
      "hostName": "api",
      "image": "whoisju1/news-grubber-api",
      "memory": 128,
      "essential": true,
      "links": ["redis"]
    },
    {
      "name": "redis",
      "hostName": "redis",
      "image": "redis:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 6379,
          "containerPort": 6379
         }
      ]
    },
    {
      "name": "client",
      "hostName": "client",
      "image": "whoisju1/news-grubber-client",
      "memory": 128,
      "essential": true,
      "portMappings": [
       {
        "hostPort": 80,
        "containerPort": 80
       }
      ],
      "links": ["api"]
    }
  ]
}