{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-certs",
      "host": {
        "sourcePath": "/etc/pki/tls/certs"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "api",
      "hostName": "api",
      "image": "whoisju1/news-grubber-api",
      "memory": 128,
      "essential": true
    },
    {
      "name": "client",
      "hostName": "client",
      "image": "whoisju1/news-grubber-client",
      "memory": 128,
      "essential": true,
      "portMappings": [
       {
        "hostPort": 80,
        "containerPort": 80
       },
       {
         "hostPort": 443,
         "containerPort": 443
       }
      ],
      "links": ["api"],
      "mountPoints": [
        {
          "sourceVolume": "nginx-certs",
          "containerPath": "/etc/nginx/certs",
          "readOnly": true
        }
      ]
    }
  ]
}